<h2>showpage of chat/application</h2>
<% other_user = @application.user == current_user ? @application.favour.user : @application.user %>
<h1>#<%= other_user.name %></h1>
<div id="messages" data-application-id="<%= @application.id %>">
  <% @application.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @application, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{other_user.name}" %>
  <%= f.submit :send, class: 'btn-ghost-filled2' %>
<% end %>
