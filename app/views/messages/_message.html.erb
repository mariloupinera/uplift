<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <% other_user = @message.user == current_user ? @message.favour.user : @message.user %>
    <span><%= other_user.name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
