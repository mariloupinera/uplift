
<div class="container">
  <div class="row">
		<div class="">

			<h2> ASK THE COMMUNITY </h2>

			 <%= simple_form_for(@favour) do |f| %>

        <div class="form-inputs">
          <%= f.input :duration %>
        </div>

        <div class="form-inputs">
            <%= f.input :description %>
        </div>

        <div class="favour-image">
          <%= f.input :photo, as: :file %>
        </div>

        <div class="button">
          <div class="row justify-content-center">

          <p><%= f.submit "Submit", class: "btn-ghost-filled" %>
      
          </p>
          </div>
        </div>
      <% end %>

			</div>

		</div>
  </div>
</div>
