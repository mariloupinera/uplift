<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs"
  style="padding-top: 100px; padding-left: 30px; padding-right: 30px;">
    <h3>Forgot your password?</h3><br>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %><br>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn-ghost-filled2" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>
</div>
