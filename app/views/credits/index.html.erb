


<div class="container-fluid">
  <div class="row">
    <div class="col-12" style="padding-top: 60px;">
      <h2 class="text-center mt-4" >YOUR CREDIT</h2>
      <button class="credit-btn mt-4" style="position:absolute; left: 115px; font-size: 20px; font-weight: bold;"><%= current_user.balance %> points</button>
      <br>
      <br>
      <br>
      <h4 class="mt-4" style="font-size: 16px;">Recent activity</h4>
      <% @transactions.each do |transaction| %>
      <div class="card-credits mt-3">
          <div>
            <div style="width:180px">
              <p style="color:grey; position:relative; top:35px; right:-50px;"><%= transaction.name%></p>
              <p style="position:relative; top:35px; right:-50px;"><%= transaction.created_at.strftime('%b %d, %Y') %></p>
              <p style="position:relative; right:-280px; top: -5px; font-weight:bold;"><%= transaction.amount_formatted %></p>
            </div>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<br>
<br>

<div class="container-fluid">
  <div class="row">
    <div class="col-12" style="position:absolute; left: 100px;">
      <%= link_to 'Redeem credits', redeem_credits_path, class: "btn-ghost-filled2" %>
    </div>
  </div>
</div>











